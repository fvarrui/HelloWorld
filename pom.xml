<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>io.github.fvarrui</groupId>
	<artifactId>HelloWorldMaven</artifactId>
	<version>1.0.0</version>

	<properties>
		<maven.compiler.target>8</maven.compiler.target>
		<maven.compiler.source>8</maven.compiler.source>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<exec.mainClass>io.github.fvarrui.helloworld.Main</exec.mainClass>
	</properties>

	<licenses>
		<license>
			<name>GPL-v3.0</name>
			<url>http://www.gnu.org/licenses/gpl-3.0.txt</url>
		</license>
	</licenses>

	<build>
		<plugins>
			<plugin>
				<groupId>io.github.fvarrui</groupId>
				<artifactId>javapackager</artifactId>
				<version>1.6.0-SNAPSHOT</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>package</goal>
						</goals>
						<configuration>
							<bundleJre>true</bundleJre>
							<copyDependencies>true</copyDependencies>
							<additionalResources>
								<additionalResource>src/main/resources/info.txt</additionalResource>
							</additionalResources>
							<generateInstaller>true</generateInstaller>
							<createZipball>false</createZipball>
							<vmArgs>
								<vmArg>-Dcustom.variable="Hi!"</vmArg>
							</vmArgs>
							<additionalModulePaths>
								<additionalModulePath>perico</additionalModulePath>
							</additionalModulePaths>
							<winConfig>
								<generateMsi>false</generateMsi>
								<registry>
									<entries>
										<entry>
											<key>HKCU:MyApp</key>
											<valueName>greeting</valueName>
											<valueType>REG_SZ</valueType>
											<valueData>hello</valueData>
										</entry>
									</entries>
								</registry>
							</winConfig>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.6</version>
		</dependency>
	</dependencies>

</project>
