<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>io.github.fvarrui</groupId>
	<artifactId>HelloWorldMaven</artifactId>
	<version>1.0.0</version>

	<properties>
		<maven.compiler.target>8</maven.compiler.target>
		<maven.compiler.source>8</maven.compiler.source>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<exec.mainClass>io.github.fvarrui.helloworld.Main</exec.mainClass>
	</properties>

	<licenses>
		<license>
			<name>GPL-v3.0</name>
			<url>http://www.gnu.org/licenses/gpl-3.0.tx</url>
		</license>
	</licenses>

	<build>
		<plugins>
			<plugin>
				<groupId>io.github.fvarrui</groupId>
				<artifactId>javapackager</artifactId>
				<version>1.2.1-SNAPSHOT</version>
				<configuration>
					<bundleJre>true</bundleJre>
					<additionalResources>
						<additionalResource>info.txt</additionalResource>
					</additionalResources>
					<generateInstaller>true</generateInstaller>
					<createZipball>true</createZipball>
					<createTarball>true</createTarball>
				</configuration>
				<executions>
					<!-- 
					<execution>
						<id>package-for-mac</id>
						<phase>package</phase>
						<goals>
							<goal>package</goal>
						</goals>
						<configuration>
							<platform>mac</platform>
							<jdkPath>C:/Program Files/AdoptOpenJDK/jdk-11.0.8+10-mac/Contents/Home</jdkPath>
						</configuration>
					</execution>
					<execution>
						<id>package-for-linux</id>
						<phase>package</phase>
						<goals>
							<goal>package</goal>
						</goals>
						<configuration>
							<platform>linux</platform>
							<jdkPath>C:/Program Files/AdoptOpenJDK/jdk-11.0.8+10-linux</jdkPath>
						</configuration>
					</execution>
					 -->
					<execution>
						<id>package-for-windows</id>
						<phase>package</phase>
						<goals>
							<goal>package</goal>
						</goals>
						<configuration>
							<platform>windows</platform>
							<winConfig>
								<headerType>console</headerType>
								<generateMsm>false</generateMsm>
								<generateSetup>false</generateSetup>
								<generateMsi>false</generateMsi>
							</winConfig>
							<vmArgs>
								<vmArg>-Dcustom.variable="Hi!"</vmArg>
							</vmArgs>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.6</version>
		</dependency>
	</dependencies>

</project>
